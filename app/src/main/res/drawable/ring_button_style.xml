<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="oval">
            <solid android:color="@color/check_button_off"/>
            <size android:width="@dimen/add_event_cb_wh" android:height="@dimen/add_event_cb_wh"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="oval">
            <solid android:color="@color/check_button_on"/>
            <size android:width="@dimen/add_event_cb_wh" android:height="@dimen/add_event_cb_wh"/>
        </shape>
    </item>
</selector>